{
    "comments": {
        "blockComment": [
            "<!--",
            "-->"
        ]
    },
    "brackets": [
        [
            "<!--",
            "-->"
        ],
        [
            "<",
            ">"
        ],
        [
            "{",
            "}"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "[",
            "close": "]",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "(",
            "close": ")",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "<!--",
            "close": "-->",
            "notIn": [
                "comment",
                "string"
            ]
        },
        {
            "open": "<?php",
            "close": "?>"
        },
        {
            "open": "<**>",
            "close": "</**>"
        },
        {
            "open": "/**",
            "close": " */",
            "notIn": [
                "string"
            ]
        }
    ],
    "surroundingPairs": [
        {
            "open": "'",
            "close": "'"
        },
        {
            "open": "\"",
            "close": "\""
        },
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "<",
            "close": ">"
        },
        {
            "open": "`",
            "close": "`"
        }
    ],
    "indentationRules": {
        "increaseIndentPattern": "({(?!.*}).*|\\(|\\[|((else(\\s)?)?if|else|for(each)?|while|switch|case).*:)\\s*((/[/*].*|)?$|\\?>)",
        "decreaseIndentPattern": "^(.*\\*\\/)?\\s*((\\})|(\\)+[;,])|(\\][;,])|\\b(else:)|\\b((end(if|for(each)?|while|switch)|break);))"
    },
    "folding": {
        "markers": {
            "start": "^\\s*<!--\\s*#region\\b.*-->",
            "end": "^\\s*<!--\\s*#endregion\\b.*-->"
        }
    }
}